{
    "easycom": {
        "autoscan": false,
        "custom": {
            "^u-(.*)": "@/uni_modules/uview-ui/components/u-$1/u-$1.vue",
            "^c-(.*)": "@/components/$1/$1.vue",
            "^zero-markdown-view$": "@/packageA/uni_modules/zero-markdown-view/components/zero-markdown-view/zero-markdown-view.vue",
            "^mescroll-uni$": "@/uni_modules/mescroll-uni/components/mescroll-uni/mescroll-uni.vue"
        }
    },
    "pages": [
        //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "首页",
                "navigationStyle": "custom", // 隐藏系统导航栏
                "navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
        },
        {
            "path": "pages/mine/index",
            "style": {
                "navigationBarTitleText": "我的"
            }
        },
        {
            "path": "pages/object/index",
            "style": {
                "navigationBarTitleText": "分类",
                "navigationStyle": "custom", // 隐藏系统导航栏
                "navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
        },
        {
            "path": "pages/mine/heart",
            "style": {
                "navigationBarTitleText": "收藏"
            }
        },
        {
            "path": "pages/mine/foot",
            "style": {
                "navigationBarTitleText": "足迹"
            }
        },
        {
            "path": "pages/mine/setting",
            "style": {
                "navigationBarTitleText": "设置"
            }
        },
        {
            "path": "pages/login/login",
            "style": {
                "navigationBarTitleText": "登录"
            }
        },
        {
            "path": "pages/object/objectList",
            "style": {
                "navigationBarTitleText": "分类列表"
            }
        },
        {
            "path": "pages/mine/message",
            "style": {
                "navigationBarTitleText": "消息"
            }
        },
        {
            "path": "pages/mine/feedback",
            "style": {
                "navigationBarTitleText": "反馈"
            }
        }
    ],
    "subPackages": [
        {
            "root": "packageA",
            "pages": [
                {
                    "path": "pages/index/detail",
                    "style": {
                        "navigationBarTitleText": "详情"
                    }
                },
                {
                    "path": "pages/search/search",
                    "style": {
                        "navigationBarTitleText": "搜索"
                    }
                }
            ]
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationStyle": "custom",
        "navigationBarTitleText": "问博",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "tabBar": {
        "color": "#3D3D3D",
        "selectedColor": "#39CCCC",
        "backgroundColor": "#FFFFFF",
        "borderStyle": "black",
        "list": [
            {
                "pagePath": "pages/index/index",
                "iconPath": "static/tab/index.png",
                "selectedIconPath": "static/tab/index_tab.png",
                "text": "首页"
            },
            {
                "pagePath": "pages/object/index",
                "iconPath": "static/tab/object.png",
                "selectedIconPath": "static/tab/object_tab.png",
                "text": "分类"
            }
            // {
            //     "pagePath": "pages/mine/index",
            //     "iconPath": "./static/tab/mine.png",
            //     "selectedIconPath": "./static/tab/mine_tab.png",
            //     "text": "我的"
            // }
        ]
    }
}